		"module": "CommonJS",
		"target": "ES2015",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"paths": {
			"default_entry/*": ["./constructor_telegram_bots/static/default/src/ts/entry/*"],
