{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2015",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": true,
		"jsx": "react",
		"strict": true,
		"paths": {
			"global_modules/*": ["./constructor_telegram_bots/static/global_modules/*"],
			"telegram_bot_api/*": ["./telegram_bot/api/static/telegram_bot/api/*"],
			"telegram_bot_frontend/*": ["./telegram_bot/frontend/static/telegram_bot/frontend/*"]
		}
	},
	"include": ["./**/*.ts", "./**/*.tsx"],
	"exclude": ["./node_modules"]
}